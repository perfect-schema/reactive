{
  "name": "@perfect-schema/tracker",
  "version": "1.1.0",
  "description": "Extends PerfectSchema instances with other schemas.",
  "author": "Yanick Rochon <yanick.rochon@gmail.com>",
  "license": "MIT",
  "main": "dist/tracker.js",
  "engines": {
    "node": ">= 8.2.1"
  },
  "scripts": {
    "test": "BABEL_ENV=test jest --forceExit --detectOpenHandles",
    "test-cov": "npm run test -- --coverage",
    "lint": "eslint src --fix",
    "prepublishOnly": "BABEL_ENV=production gulp"
  },
  "keywords": [
    "perfect-schema",
    "tracker",
    "meteor"
  ],
  "homepage": "https://perfect-schema.github.io/tracker/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perfect-schema/tracker.git"
  },
  "bugs": {
    "url": "https://github.com/perfect-schema/tracker/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@perfect-schema/base": "^2.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "jest": "^23.5.0",
    "meteor-standalone-tracker": "^1.0.97"
  },
  "peerDependencies": {
    "meteor": "latest"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "bail": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!var-validator)/"
    ]
  }
}
