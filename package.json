{
  "name": "@perfect-schema/tracker",
  "version": "1.0.1",
  "description": "Extends PerfectSchema instances with other schemas.",
  "author": "Yanick Rochon <yanick.rochon@gmail.com>",
  "license": "MIT",
  "main": "src/tracker.js",
  "browser": "dist/perfect-schema-tracker.min.js",
  "engines": {
    "node": ">= 8.2.1"
  },
  "scripts": {
    "test": "jest --forceExit --detectOpenHandles",
    "test-cov": "npm run test -- --coverage",
    "lint": "eslint src --fix",
    "prepublishOnly": "BABEL_ENV=production gulp"
  },
  "keywords": [
    "perfect-schema",
    "tracker",
    "meteor"
  ],
  "homepage": "https://perfect-schema.github.io/tracker/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perfect-schema/tracker.git"
  },
  "bugs": {
    "url": "https://github.com/perfect-schema/tracker/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@perfect-schema/base": "^2.2.2",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "gulp": "^4.0.0",
    "gulp-buffer": "0.0.2",
    "gulp-butternut": "^1.0.0",
    "gulp-derequire": "^2.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "jest": "^23.5.0",
    "meteor-standalone-tracker": "^1.0.97",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "peerDependencies": {
    "meteor": "latest"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env",
          "es2015"
        ]
      },
      "production": {
        "presets": [
          "es2015",
          "stage-2"
        ]
      }
    }
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "bail": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!var-validator)/"
    ]
  }
}
